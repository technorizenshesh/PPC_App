<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.membership.PurchseSuccessMembershipActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/dark_primary"
                    android:scaleType="fitXY" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_background_icons"
                    android:scaleType="fitXY" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/dark_primary"
                    android:scaleType="fitXY" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_background_icons"
                    android:scaleType="fitXY" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/dark_primary"
                    android:scaleType="fitXY" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_background_icons"
                    android:scaleType="fitXY" />

            </RelativeLayout>





        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/back"
                app:tint="@color/white"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_marginBottom="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_marginTop="40dp"
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_mobhand" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/bold"
                            android:gravity="center"
                            android:text="Your Membership \nPurchase is A Success"
                            android:textColor="@color/Dark_2"
                            android:textSize="22sp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:gravity="center"
                            android:text="Review your payment \noverview blelow"
                            android:textColor="@color/Dark_3"
                            android:textSize="18sp" />


                        <LinearLayout
                            android:background="@color/gray_05"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_marginVertical="5dp"
                                android:layout_marginLeft="16dp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/regular"
                                 android:text="ITEM"
                                android:textColor="@color/primary_color_01"
                                android:textSize="18sp" />


                            <TextView
                                android:layout_marginVertical="5dp"
                                android:layout_marginRight="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/regular"
                                android:gravity="center"
                                android:text="PRICE"
                                android:textColor="@color/primary_color_01"
                                android:textSize="18sp" />



                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginVertical="5dp"
                             android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                             android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvYear"
                                android:layout_marginVertical="5dp"
                                android:layout_marginLeft="16dp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/regular"
                                android:text="3 Year Membership"
                                android:textColor="@color/Dark_3"
                                android:textSize="17sp" />


                            <TextView
                                android:id="@+id/tvPrice"
                                android:layout_marginVertical="5dp"
                                android:layout_marginRight="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/regular"
                                android:gravity="center"
                                android:text="$24.00"
                                android:textColor="@color/Dark_3"
                                android:textSize="17sp" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#14747480"/>

                        <LinearLayout
                            android:layout_marginVertical="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_marginVertical="5dp"
                                android:layout_marginLeft="16dp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/regular"
                                android:text="Tax"
                                android:textColor="@color/Dark_3"
                                android:textSize="17sp" />


                            <TextView
                                android:id="@+id/tvTax"
                                android:layout_marginVertical="5dp"
                                android:layout_marginRight="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/regular"
                                android:gravity="center"
                                android:text="$00.00"
                                android:textColor="@color/Dark_3"
                                android:textSize="17sp" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#14747480"/>

                        <LinearLayout
                            android:layout_marginVertical="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_marginVertical="5dp"
                                android:layout_marginLeft="16dp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/regular"
                                android:text="Total"
                                android:textColor="@color/Dark_3"
                                android:textSize="17sp" />


                            <TextView
                                android:id="@+id/tvTotal"
                                android:layout_marginVertical="10dp"
                                android:layout_marginRight="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/regular"
                                android:gravity="center"
                                android:text="$24.00"
                                android:textColor="@color/Dark_3"
                                android:textSize="17sp" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#14747480"/>


                        <TextView
                            android:layout_marginTop="32dp"
                            android:layout_marginHorizontal="16dp"
                            android:id="@+id/tv_continue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="40dp"
                            android:background="@drawable/bg_btn"
                            android:fontFamily="@font/bold"
                            android:gravity="center"
                            android:paddingVertical="12dp"
                            android:text="@string/view_membership_card"
                            android:textColor="@color/white"
                            android:textSize="17sp" />

                    </LinearLayout>



                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>