<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

             <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:fontFamily="@font/bold"
                android:text="@string/_1_year_membership_purchase"
                android:textColor="@color/Dark_2"
                android:textSize="17sp"/>

            <LinearLayout
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date"
                    android:layout_marginRight="16dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="24-08-2018"
                    android:layout_weight="1"
                    android:textColor="@color/gray_01"
                    android:textSize="12sp"
                    android:fontFamily="@font/regular"/>

                <TextView
                    android:id="@+id/trans_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="|    3.15 PM"
                    android:layout_weight="1"
                    android:textColor="@color/gray_01"
                    android:textSize="12sp"
                    android:fontFamily="@font/regular"/>

                <TextView
                     android:id="@+id/tv_save_details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="1"
                     android:background="@color/primary_color_04"
                    android:fontFamily="@font/regular"
                    android:gravity="center"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="2dp"
                    android:text="@string/donate_now"
                    android:textColor="@color/primary_color_01"
                    android:textSize="12sp" />



            </LinearLayout>




        </LinearLayout>


        <TextView
            android:id="@+id/amount"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginRight="32dp"
            android:fontFamily="@font/bold"
            android:text="$10.00"
            android:textColor="@color/primary_color_01"
            android:textSize="17sp" />


    </LinearLayout>

    <View
        android:id="@+id/view_out"
        android:layout_marginBottom="8dp"
         android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_05"/>




</LinearLayout>